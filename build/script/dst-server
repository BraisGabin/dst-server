#!/usr/bin/env bash

usage(){
	cat /usr/local/lib/dsta/doc/dst-server.usage
}

if [ $# -eq 0 ]; then
	usage
	exit 1
fi

case $@ in
	--help|help)
		usage
		;;
	--help\ start|--help\ start\ *|help\ start|help\ start\ *)
		exec dst-start --help
		;;
	--help\ update|--help\ update\ *|help\ update|help\ update\ *)
		exec dst-update --help
		;;
	--help\ log|--help\ log\ *|help\ log|help\ log\ *)
		exec dst-log --help
		;;
	start*)
		shift
		exec dst-start "$@"
		;;
	update*)
		shift
		exec dst-update "$@"
		;;
	log*)
		shift
		exec dst-log "$@"
		;;
	*)
		usage 1>&2
		exit 1
esac
